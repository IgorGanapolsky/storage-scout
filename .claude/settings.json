{
  "hooks": {
    "SessionStart": [
      {
        "type": "command",
        "command": ".claude/hooks/session-start.sh"
      }
    ],
    "UserPromptSubmit": [
      {
        "type": "command",
        "command": ".claude/hooks/user-prompt-submit.sh",
        "async": true,
        "timeout": 30
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(node:*)",
      "Bash(npm:*)",
      "Bash(flutter:*)",
      "Bash(git:*)",
      "Bash(gh:*)"
    ]
  }
}
